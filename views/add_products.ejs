<%- include('layout/header.ejs') %> 

<!-- Form for adding products to inventory -->
<div class="container">
    <h3 style="padding-top:10px">Add Product</h3>
    <form action="/add" method="post" id="add-form" enctype="multipart/form-data">
        <br/>
        <div class="form-group">
          <label for="name">Product Name</label>
          <input type="text" class="form-control" name="name" placeholder="Enter Product Name" required>
        </div>
        <br/>
        <div class="form-group">
            <label for="description">Product Description</label>
            <textarea class="form-control" name="description" rows="3" required placeholder="Enter Product Description"></textarea>
        </div>
        <br/>
        <div class="form-group">
            <label for="price">Product Price</label>
            <input type="text" class="form-control" name="price" required placeholder="Enter Product Price">
          </div>
          <br/>
        <div class="form-group">
            <label for="city">City</label>
            <select class="form-control" name="city" required>
              <option>Windsor</option>
              <option>Toronto</option>
              <option>Ottawa</option>
              <option>Brampton</option>
              <option>Kitchener</option>
            </select>
          </div>
          <br/>
          <div class="form-group">
            <label for="image" class="form-label">Product Image</label>
            <input type="file" class="form-control-file form-control " name="image" required>
          </div>
          <br/>
        <button type="submit" class="btn btn-primary" style="margin-bottom: 10px;">Submit</button>
      </form>
</div>

<%- include('layout/footer.ejs') %> 