<%- include('layout/header.ejs') %> 

<!-- Table for displaying the Products -->
<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
                <div class="alert alert-dismissible fade show alert-<%= message.type%> role="alert>
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close">
                    </button>
                    <strong><%= message.message %> </strong>
                </div>
            <% } %> 
            <div class="table-responsive">
                <% if (products != "") { %>
                    <table class="table text-center">
                        <thead class="bg-dark" style="color: white;">
                            <tr>
                                <th>ID</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Price</th>
                                <th>City</th>
                                <th>Weather</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% products.forEach((row,index) => { %>
                                <tr class="align-middle">
                                    <td><%= index  %> </td>
                                    <td><img src="<%= row.image %> " width="100" height="100" class="img-thumbnail"></td>
                                    <td><%= row.name %> </td>
                                    <td><%= row.description %> </td>
                                    <td>$<%= row.price %> </td>
                                    <td><%= row.city %> </td>
                                    <td>
                                        <p>
                                            Temp: <%= row.weather["temp"]%>°C <br/>
                                            Min. Temp: <%= row.weather["temp_min"]%>°C <br/>
                                            Max. Temp: <%= row.weather["temp_max"]%>°C 
                                        </p>
                                    <td>
                                        <a href="/edit/<%= row._id %> " class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                        <a href="/delete/<%= row._id %> " class="text-success"><i class="fas fa-trash fa-lg mx-1" style="color:red"></i></a>
                                    </td>
        
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else {%>
                    <h1 class="text-center text-secondary mt-5 ">No Products found in Database</h1>
                    <% } %> 
                
            </div>    
        </div>
    </div>
</div>

<%- include('layout/footer.ejs') %> 